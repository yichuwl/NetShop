<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".personspace.ToBePayListActivity">

    <include layout="@layout/top_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/main_color_transparent" />

    <TextView
        android:id="@+id/txt_order_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_five"
        android:text="@string/nodata_clicktorefresh"
        android:textColor="@color/gray"
        android:textSize="@dimen/activity_horizontal_margin"
        android:visibility="gone" />

    <com.shop.customize.pullrefresh.PullToRefershView
        android:id="@+id/list_wuliu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        android:layout_weight="1" />

</LinearLayout>