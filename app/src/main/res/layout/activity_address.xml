<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".shopchart.AddressActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/back_address"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/margin_ten"
            android:scaleType="fitXY"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/editaddress"
            android:textSize="@dimen/margin_twenty" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/main_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#60cccccc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/bg_edit"
        android:padding="@dimen/margin_ten">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="用户名："
            android:textColor="@color/main_color"
            android:textSize="@dimen/activity_horizontal_margin" />

        <EditText
            android:id="@+id/edt_name_addr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:textSize="@dimen/activity_horizontal_margin" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#60cccccc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/bg_edit"
        android:padding="@dimen/margin_ten">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="手机号："
            android:textColor="@color/main_color"
            android:textSize="@dimen/activity_horizontal_margin" />

        <EditText
            android:id="@+id/edt_phonenumber_addr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:textSize="@dimen/activity_horizontal_margin" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#60cccccc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/bg_edit"
        android:padding="@dimen/margin_ten">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="地址："
            android:textColor="@color/main_color"
            android:textSize="@dimen/activity_horizontal_margin" />

        <TextView
            android:id="@+id/txt_addr_addr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="right|end"
            android:text="@string/select_addr"
            android:textSize="@dimen/activity_horizontal_margin" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#60cccccc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edit"
        android:padding="@dimen/margin_ten">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="详细地址："
            android:textColor="@color/main_color"
            android:textSize="@dimen/activity_horizontal_margin" />

        <EditText
            android:id="@+id/edt_addr_addr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_ten"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:minLines="2"
            android:textSize="@dimen/activity_horizontal_margin" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/ckb_sdefault"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_fifteen"
        android:text="@string/default_addr" />

    <Button
        android:id="@+id/btn_save_addr"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="@dimen/margin_twenty"
        android:background="@drawable/btn_signup_bg"
        android:text="保存"
        android:textColor="@color/main_color"
        android:textSize="@dimen/margin_twenty" />
</LinearLayout>