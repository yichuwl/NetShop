<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_theme_title"
        android:paddingBottom="@dimen/margin_five"
        android:paddingLeft="@dimen/margin_ten"
        android:paddingRight="@dimen/margin_ten"
        android:paddingTop="@dimen/margin_ten">

        <TextView
            android:id="@+id/txt_title_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_color"
            android:textSize="@dimen/margin_twenty"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_seemore_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/txt_seemore" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/image_theme"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="@dimen/margin_five"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="@dimen/margin_ten"
        android:background="@drawable/bg_gray_corner"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/margin_ten"
            android:layout_marginRight="@dimen/margin_ten"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_five"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/linear1_theme"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_subtheme1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:padding="@dimen/margin_ten"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/txt_themesub1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_five" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_transparent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_five"
                android:layout_marginRight="@dimen/margin_five"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/linear2_theme"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_subtheme2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:padding="@dimen/margin_ten"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/txt_themesub2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_five" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_transparent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_five"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/linear3_theme"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_subtheme3"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:padding="@dimen/margin_ten"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/txt_themesub3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_five" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_transparent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/margin_ten"
            android:layout_marginRight="@dimen/margin_ten"
            android:paddingBottom="@dimen/margin_five"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_five"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/linear4_theme"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_subtheme4"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:padding="@dimen/margin_ten"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/txt_themesub4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_five" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_transparent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_five"
                android:layout_marginRight="@dimen/margin_five"
                android:layout_weight="1"
                android:id="@+id/linear5_theme"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_subtheme5"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:padding="@dimen/margin_ten"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/txt_themesub5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_five" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_transparent" />

            <LinearLayout
                android:layout_width="0dp"
                android:id="@+id/linear6_theme"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_five"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_subtheme6"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:padding="@dimen/margin_ten"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/txt_themesub6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_five" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>