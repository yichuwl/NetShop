<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".shequ.CommentArticleActivity">

    <include
        layout="@layout/activity_goods_comment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_transparent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="@dimen/margin_ten"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="2dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/edt_commentarticle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_weight="4"
            android:background="@drawable/bg_item_autoflow_corner"
            android:gravity="center_vertical"
            android:hint="@string/addcomment_hint"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"/>

        <Button
            android:id="@+id/btn_upcommentarticle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="@dimen/margin_ten"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/comment"
            android:textColor="@color/main_color"
            android:textSize="@dimen/margin_twenty"/>
    </LinearLayout>

</LinearLayout>