<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shop.shequ.SheQuArticleActivity">

    <include layout="@layout/top_bar" />

    <WebView
        android:id="@+id/web_articelcontent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingBottom="@dimen/margin_ten"
        android:background="@color/white">

        <Button
            android:id="@+id/btn_commentarticel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_item_autoflow_corner"
            android:text="@string/comment" />
    </LinearLayout>
</LinearLayout>
