<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".personspace.OrderDetailActivity">

    <include layout="@layout/top_bar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/gray_transparent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_addr_orderdetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/location_icon"
                android:drawablePadding="@dimen/margin_five"
                android:paddingBottom="@dimen/margin_ten"
                android:paddingLeft="@dimen/margin_fifteen"
                android:paddingTop="@dimen/margin_ten"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/gray_transparent"/>

            <LinearLayout
                android:id="@+id/good_content_orderdetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/gray_transparent"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp">

                <TextView
                    android:id="@+id/btn_operator_orderdetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="3dp"
                    android:textSize="@dimen/activity_horizontal_margin"/>

                <TextView
                    android:id="@+id/txt_money_orderdetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_ten"
                    android:layout_toLeftOf="@+id/btn_operator_orderdetail"
                    android:text="sdf"
                    android:textColor="@color/main_color"
                    android:textSize="14dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/txt_money_orderdetail"
                    android:text="合计：￥"
                    android:textColor="@color/main_color"
                    android:textSize="14dp"/>

                <TextView
                    android:id="@+id/coupon_orderdetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/txt_money_orderdetail"
                    android:layout_below="@+id/txt_money_orderdetail"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="2dp"
                    android:text="sdf"
                    android:textColor="@color/gray"
                    android:textSize="14dp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/gray_transparent"/>

            <TextView
                android:id="@+id/txt_orderdetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_ten"
                android:paddingLeft="@dimen/margin_five"
                android:paddingRight="@dimen/margin_five"
                android:paddingTop="@dimen/margin_ten"/>


        </LinearLayout>
    </ScrollView>

</LinearLayout>