<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="@dimen/margin_five"
        android:paddingRight="@dimen/margin_five"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/txt_ordernum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_five"
            android:textColor="@color/gray"/>

        <TextView
            android:id="@+id/txt_order_seedetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/margin_five"
            android:layout_marginRight="@dimen/margin_five"
            android:text="@string/see_order_detail"
            android:textColor="@color/gray"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_transparent"/>

    <LinearLayout
        android:id="@+id/goods_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="@dimen/margin_five">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_five"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="订单合计：￥"
            android:textColor="@color/main_color"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/txt_order_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="@dimen/margin_five"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="300"
            android:textColor="@color/main_color"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/btn_order_cancel"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginRight="@dimen/margin_five"
            android:layout_marginTop="@dimen/margin_five"
            android:background="@drawable/bg_item_autoflow_corner"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="取消订单"
            android:textColor="@color/colorPrimary"
            android:textSize="14dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/btn_order_operator"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginRight="@dimen/margin_ten"
            android:layout_marginTop="@dimen/margin_five"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="已完成"
            android:textColor="@color/colorPrimary"
            android:textSize="14dp"/>
    </LinearLayout>
</LinearLayout>