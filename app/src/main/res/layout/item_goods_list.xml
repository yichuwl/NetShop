<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rela_item_good_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_five"
    android:layout_marginLeft="@dimen/margin_five"
    android:layout_marginRight="@dimen/margin_five"
    android:background="@color/white"
    android:clickable="true"
    android:padding="@dimen/margin_five">

    <ImageView
        android:id="@+id/img_item_maylike"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/margin_ten"
        android:layout_marginRight="@dimen/margin_ten"
        android:scaleType="fitXY"
        android:src="@mipmap/nopic" />

    <TextView
        android:id="@+id/txt_title_item_maylike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_item_maylike"
        android:layout_margin="@dimen/margin_five"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="111222222212121212121212"
        android:textSize="@dimen/activity_horizontal_margin" />

    <TextView
        android:id="@+id/txt_rmblogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txt_title_item_maylike"
        android:layout_marginLeft="@dimen/margin_fifteen"
        android:text="ï¿¥ "
        android:textColor="@color/main_color"
        android:textSize="@dimen/margin_ten" />

    <TextView
        android:id="@+id/txt_price_item_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_rmblogo"
        android:layout_toRightOf="@id/txt_rmblogo"
        android:text="255"
        android:textColor="@color/main_color"
        android:textSize="@dimen/activity_horizontal_margin" />
</RelativeLayout>