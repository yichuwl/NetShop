<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/linear_searchbar"
              android:layout_width="match_parent"
              android:layout_height="42dp"
              android:clickable="true"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:orientation="horizontal"
              android:paddingBottom="5dp"
              android:paddingLeft="@dimen/margin_ten"
              android:paddingRight="@dimen/margin_ten"
              android:paddingTop="@dimen/margin_five">

    <ImageView
        android:id="@+id/img_search"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitXY"/>

    <EditText
        android:id="@+id/edt_search"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_ten"
        android:layout_marginRight="@dimen/margin_ten"
        android:layout_weight="1"
        android:background="@drawable/bg_item_autoflow_corner"
        android:drawablePadding="@dimen/margin_five"
        android:drawableRight="@mipmap/searchicon"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_ten"
        android:hint="@string/search_goods"
        android:textColor="@color/main_color_transparent"
        android:textSize="@dimen/margin_fifteen"/>

    <Button
        android:id="@+id/btn_search"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:background="@drawable/bg_search_corner"
        android:text="@string/search_btn"
        android:textColor="@color/white"
        android:visibility="gone"/>

</LinearLayout>