<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="120dp">

    <ImageView
        android:id="@+id/image_item_good_order"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_five"
        android:layout_marginRight="@dimen/margin_ten"
        android:layout_marginTop="@dimen/margin_ten"
        android:scaleType="fitXY"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txt_title_item_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_five"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="sdfsdfsd"
            android:textSize="@dimen/activity_horizontal_margin"/>

        <TextView
            android:id="@+id/txt_model_item_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_title_item_goods"
            android:layout_below="@+id/txt_title_item_order"
            android:layout_marginTop="@dimen/margin_five"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="sdfasdfsadfsa"
            android:textColor="@color/gray"
            android:textSize="@dimen/tabtxt_size_twenlve"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_model_item_order"
            android:layout_marginTop="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥ "
                android:textColor="@color/main_color"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/text_ordergoods_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="234"
                android:textSize="@dimen/margin_fifteen"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/margin_twenty"
            android:layout_marginRight="@dimen/margin_ten"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_num_goodsorder"
                android:layout_width="35dp"
                android:layout_height="28dp"
                android:text="x 1"
                android:textColor="@color/gray"/>

            <TextView
                android:id="@+id/btn_goods_order_operator"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/margin_fifteen"
                android:layout_marginTop="@dimen/margin_five"
                android:clickable="true"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="已完成"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp"
                android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>