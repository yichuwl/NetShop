<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/activity_signin_and_up"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.shop.sign.SigninAndUpActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/linear_txt_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/txt_signin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/twentyfive"
                android:text="@string/signup"
                android:textColor="@color/main_color"
                android:textSize="@dimen/edit_margin_lr_thirty"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_signin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_txt_signin"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/edtlayout_sign_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/edit_margin_lr_thirty"
                android:layout_marginRight="@dimen/edit_margin_lr_thirty"
                android:layout_marginTop="@dimen/margin_ten"
                app:errorEnabled="true"
                app:errorTextAppearance="@style/TextErrorAppearance"
                app:hintAnimationEnabled="true"
                app:hintTextAppearance="@style/HintErrorAppearance"
                app:theme="@style/TextInputLayoutTheme">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_sign_username"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/username"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/edtlayout_sign_userphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/edit_margin_lr_thirty"
                android:layout_marginRight="@dimen/edit_margin_lr_thirty"
                android:layout_marginTop="@dimen/margin_ten"
                android:visibility="gone"
                app:counterEnabled="true"
                app:counterMaxLength="11"
                app:counterOverflowTextAppearance="@color/colorAccent"
                app:errorEnabled="true"
                app:errorTextAppearance="@style/TextErrorAppearance"
                app:hintAnimationEnabled="true"
                app:theme="@style/TextInputLayoutTheme">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_sign_userphone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/userphone"
                    android:inputType="phone"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/edtlayout_sign_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/edit_margin_lr_thirty"
                android:layout_marginRight="@dimen/edit_margin_lr_thirty"
                android:layout_marginTop="@dimen/margin_ten"
                android:visibility="gone"
                app:counterOverflowTextAppearance="@color/colorAccent"
                app:hintAnimationEnabled="true"
                app:theme="@style/TextInputLayoutTheme">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_sign_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/nickname"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/edtlayout_sign_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/edit_margin_lr_thirty"
                android:layout_marginRight="@dimen/edit_margin_lr_thirty"
                android:layout_marginTop="@dimen/margin_ten"
                android:visibility="gone"
                app:errorEnabled="true"
                app:errorTextAppearance="@style/TextErrorAppearance"
                app:hintAnimationEnabled="true"
                app:hintTextAppearance="@style/HintErrorAppearance"
                app:theme="@style/TextInputLayoutTheme">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_sign_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress|textWebEmailAddress"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/edtlayout_sign_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/edit_margin_lr_thirty"
                android:layout_marginRight="@dimen/edit_margin_lr_thirty"
                android:layout_marginTop="@dimen/margin_ten"
                app:errorEnabled="true"
                app:errorTextAppearance="@style/TextErrorAppearance"
                app:hintAnimationEnabled="true"
                app:hintTextAppearance="@style/HintErrorAppearance"
                app:passwordToggleEnabled="true"
                app:theme="@style/TextInputLayoutTheme">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_sign_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/password"
                    android:inputType="textPassword"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/edtlayout_sign_surepassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/edit_margin_lr_thirty"
                android:layout_marginRight="@dimen/edit_margin_lr_thirty"
                android:layout_marginTop="@dimen/margin_ten"
                android:visibility="gone"
                app:errorEnabled="true"
                app:errorTextAppearance="@style/TextErrorAppearance"
                app:hintAnimationEnabled="true"
                app:hintTextAppearance="@style/HintErrorAppearance"
                app:passwordToggleEnabled="true"
                app:theme="@style/TextInputLayoutTheme">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_sign_surepassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/surepwd"
                    android:inputType="textPassword"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_signin"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/linear_signin"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/activity_signtxt_margin"
            android:layout_marginRight="@dimen/activity_signtxt_margin"
            android:layout_marginTop="@dimen/edit_margin_lr_thirty"
            android:background="@drawable/btn_signup_bg"
            android:text="@string/signup"/>

        <TextView
            android:id="@+id/txt_noaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_signin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_twenty"
            android:text="@string/noaccount_signin"
            android:textColor="@color/main_color_transparent90"
            android:textSize="@dimen/margin_fifteen"/>
    </RelativeLayout>
</ScrollView>
